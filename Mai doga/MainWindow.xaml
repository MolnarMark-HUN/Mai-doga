<Window x:Class="Mai_doga.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mai_doga"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid
        RenderTransformOrigin="0,0"
        Background="DarkSeaGreen">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        
        <Border
            Grid.ColumnSpan="2"
            Grid.RowSpan="2"
            Background="Wheat"
            Margin="10"
            CornerRadius="20"
            >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                    <Label
            Content="Kolbász"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="20"
            Foreground="Coral"
            />
                <TextBox
                    Grid.Column="1"
                    Margin="20"
                    Name="Kolbasztext"
                    TextAlignment="Center"
                    VerticalContentAlignment="Center"
                    />
                <Button
                    Grid.Column="2"
                    Margin="20"
                    Content="Nyomj meg"
                    Background="Cyan"
                    Name="addbutton"
                    />
                <TextBlock
                    Grid.Row="1"
                    Text="Szalonna"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20"
                    Foreground="Aqua"
                    />
                <StackPanel
                    Grid.Column="1"
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    Background="Azure"
                    Margin="15"
                    
                    >
                    <Label
                        Content="Kolbasz 1"
                        HorizontalAlignment="Center"
                        Foreground="Black"
                        
                        />
                    <Label
                        Content="Kolbasz 2"
                        HorizontalAlignment="Center"
                        Foreground="Black"
                        
                        />
                    <Label
                        Content="Kolbasz 3"
                        HorizontalAlignment="Center"
                        Foreground="Black"
                        
                        />
                </StackPanel>
            </Grid>
            
        </Border>
        <StackPanel
            Grid.Column="2"
            Background="AliceBlue"
            Grid.RowSpan="3"
            Margin="10"
            Name="Rightpanel"
            >
            <Label
                Content="Egy"
                HorizontalAlignment="Center"
                
                />
            <Label
                Content="Ketto"
                HorizontalAlignment="Center"
                
                />
            <Label
                Content="Harom"
                HorizontalAlignment="Center"
                
                />
            <Label
                Content="Harom"
                HorizontalAlignment="Center"
                
                />
        </StackPanel>
        <Grid
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Background="DarkGreen"
            Height="70"
            
            >
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label
                Content="valami 1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="Wheat"
                FontWeight="Bold"
                FontSize="20"/>
            <Label
                Content="valami 2"
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="Wheat"
                FontWeight="Bold"
                FontSize="20"/>
            <Label
                Content="valami 3"
                Grid.Column="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="Wheat"
                FontWeight="Bold"
                FontSize="20"/>
            <Label
                Content="valami 4"
                Grid.Column="3"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="Wheat"
                FontWeight="Bold"
                FontSize="20"/>
        </Grid>
    </Grid>
</Window>
